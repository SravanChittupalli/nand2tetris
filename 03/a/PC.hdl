/**
 * A 16-bit counter with load and reset control bits.
 * if      (reset[t] == 1) out[t+1] = 0
 * else if (load[t] == 1)  out[t+1] = in[t]
 * else if (inc[t] == 1)   out[t+1] = out[t] + 1  (integer addition)
 * else                    out[t+1] = out[t]
 */

CHIP PC {
    IN in[16],load,inc,reset;
    OUT out[16];

    PARTS:
    Inc16(in=out1 , out=incout);
    Mux16(a=out1 , b=incout , sel=inc , out=incfinalout);
    Mux16(a=incfinalout , b=in , sel=load , out=loadout);
    Mux16(a=loadout , b=false , sel=reset , out=resout);
    Register(in=resout , load=true , out=out1);
    Or16(a=out1 , b=false , out=out);
}
